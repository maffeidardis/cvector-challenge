{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
      "builder": "NIXPACKS",
      "nixpacksPlan": {
        "phases": {
          "install": {
            "cmds": [
              "pip install -r requirements.txt"
            ]
          }
        }
      }
    },
    "deploy": {
      "startCommand": "python run.py",
      "restartPolicyType": "ON_FAILURE",
      "restartPolicyMaxRetries": 10
    }
  }
  